#:kivy 1.10.0

<AsyncImage>:
    size_hint: [0.125, 0.5]

<WeatherLabel>:
    text_size: self.size
    valign: 'middle'

<WeatherBoxTitle>:
    size_hint: (1, 0.1)
    color: [1, 0, 0.75, 1]
    underline: True

<TodayLabel>:
    halign: 'center'
    size_hint: (0.5, 0.5)

<TodayHeader>:
    halign: 'center'
    size_hint: (0.5, 0.5)
    color: [0, 1, 0.5, 1]
    underline: True

<TodayGrid>:
    cols: 2

<TodayBox>:
    orientation: 'vertical'
    size_hint: (0.45, 1.0)
    padding: [4]

<ForecastDay>:
    halign: 'right'
    size_hint: (0.45, 0.5)

<ForecastNumeric>
    halign: 'center'
    size_hint: (0.25, 0.5)

<ForecastHeader>:
    halign: 'center'
    size_hint: (0.1, 0.5)
    color: [0, 1, 0.5, 1]
    underline: True

<ForecastStatus>:
    halign: 'left'
    size_hint: (0.5, 0.5)

<StatusHeader>:
    color: [0, 1, 0.5, 1]
    underline: True

<ForecastGrid>:
    cols: 6
    spacing: [24, 0]

<ForecastBox>:
    orientation: 'vertical'
    padding: [4]

<WeatherBox>:
